{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 120,
        "trailingComma": "all",
        "semi": true,
        "jsxSingleQuote": true,
        "arrowParens": "avoid"
      }
    ]
  }
}